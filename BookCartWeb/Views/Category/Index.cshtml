@using BookCart.Data.Entities
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model IReadOnlyList<Category>
@{
    ViewData["Title"] = "Category Page";
}


<h1>Category List</h1> 
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Catgeory Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model.OrderBy(o => o.DisplayOrder))
        {
            <tr>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>