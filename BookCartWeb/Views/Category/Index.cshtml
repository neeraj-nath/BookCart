@model IReadOnlyList<CategoryModel>
@{
    ViewData["Title"] = "Category Page";
}


<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-square"></i> Create Category</a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Catgeory Name
            </th>
            <th>
                Display Order
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var category in Model.OrderBy(o => o.DisplayOrder))
        {
            <tr>
                <td>
                    @category.Name
                </td>
                <td>
                    @category.DisplayOrder
                </td>
            </tr>
        }
    </tbody>
</table>
</div>