@page
@model BookCart_RazorPages.Pages.Categories.CreateModel


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr/>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.Name" class="p-0">Category Name</label> @* having the label name after the asp-for taghelper also works fine *@
            <input asp-for="Category.Name" placeholder="E.g : Fiction" class="form-control"/>
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="Category.DisplayOrder" class="p-0"></label>
            @* having the asp-for taghelper in label automatically handles the naming used in that label. Do not need to explicitly provide it like this: <label>Display Order</label>*@
            <input asp-for="Category.DisplayOrder" placeholder="E.g : 2" class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-outline-secondary form-control">Back</a>
            </div>
        </div>
    </div>

</form>

@section scripts{
    <partial name="_validationscriptspartial" />
}